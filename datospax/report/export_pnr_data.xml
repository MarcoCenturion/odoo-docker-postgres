<odoo>
<data>
	
	<report 
		id="report_renglon_pnr"
		string="External report"
		model="datospax.pnr.wizard"
		report_type=""
		name="data.pax_renglon_a_amadeus"
		file="data.pax_renglon_a_amadeus"
		menu="False"
		print_report_name="Nada del otro mundo"
	/>


	<template id="data.pax_renglon_a_amadeus" >
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
			<div class="page" style="font-size:18px">
				<div class="row">
					<div class="col-md-12" align="center">
						<h2>Renglon para amadeus</h2>
						<h4>NM1</h4>
						<table class="table mt16">
						<thead class="thead-dark">
							<tr >
								<th scope="col">surname</th>
								<th scope="col">name</th>
								<th scope="col">passport</th>
								<th scope="col">private_email</th>
								<th scope="col">private_cel_phone</th>
							</tr>
						</thead>

						<tbody>
							<t t-foreach="pax_records" t-as="record" >
							</t>
						</tbody>
				</table>
			</div>
		</div>
	</div>
</t>
</t>
</template>

</data>
</odoo>
<odoo>
  <data>

    <record model="ir.ui.view" id="copiartst_form">
      <field name="name">copiartst_form</field>
      <field name="model">copia.tst</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button type="object" name="_copytst" string="Copiar TST" />
            <button type="object" name="_pastetst" string="Pegar Datos" />
            <button type="object" name="_newtst" string="Agregar otro TST" />
          </header>
        <field name="tst_amadeus"/>
        <field name="cia"/>      
        <field name="route"/>      
        <field name="date"/>
        <field name="rate"/>
        <field name="bagage"/>
        <field name="ltd"/>
        <field name="fare_usd"/>
        <field name="fare_ars"/>
        <field name="ttl"/>
        <field name="retenc"/>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_sale_order_buttons">
      <field name="name">sale.order.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
<!--
      <xpath expr = "//field[@name='sale_order_line']" position = "after" >
         <field name="tst_amadeus"/> 

      </xpath>
-->
        <form>
          <header>
            <button type="object" name="_copytst" string="Copiar TST ARS" class="oe_highlight" />
          </header>
        </form>
      </field>
    </record>


  <record model="ir.ui.view" id="copiartst_list">
      <field name="name">copiartst_list</field>
      <field name="model">copia.tst</field>
      <field name="arch" type="xml">
        <tree>
        <field name="cia"/>      
        <field name="route"/>
        <field name="date"/>
        <field name="bagage"/>
        <field name="ltd"/>
        <field name="rate"/>
        <field name="fare_usd"/>
        <field name="fare_ars"/>
        <field name="ttl"/>
        <field name="retenc"/>
         </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="copiartst_filter">
      <field name="name">copiartst_filter</field>
      <field name="model">copia.tst</field>
      <field name="arch" type="xml">
        <search>
          <field name="tst_amadeus"/>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="tstmaker_action_window">
      <field name="name">TST Maker</field>
      <field name="res_model">copia.tst</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Tst maker" id="tstmaker_menu_root"/>
    <!-- menu categories -->

    <menuitem name="Parsear TST" id="tstmaker_document" parent="tstmaker_menu_root" 
    action="tstmaker_action_window"/>
  </data>
</odoo>
<odoo>
  <data>

    <record model="ir.ui.view" id="view_sale_order_buttons">
      <field name="name">sale.order.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
     <xpath expr = "//field[@name='order_line']" position ="before">
        <form>
         <header>
             <button type="object" name="copia.tst" string="TST USD" class="oe_highlight" />
             <button type="object" name="_tstars" string="TST ARS" with='0.1" options={"warn": true}' />
          </header>

        <field name="line_air"/>
        </form>
      </field>
    </record>
  </data>
</odoo>